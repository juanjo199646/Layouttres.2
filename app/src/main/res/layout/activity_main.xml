<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aula_7.layouttres.MainActivity">


    <TextView
        android:id="@+id/txt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_1"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/txt_arriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_2"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_above="@id/txt_center"
        android:layout_alignLeft="@id/txt_center"

        />

    <TextView
        android:id="@+id/txt_izquierdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_3"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_toLeftOf="@id/txt_center"
        android:layout_centerInParent="true"

        />

    <TextView
        android:id="@+id/txt_derecho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_4"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_toRightOf="@id/txt_center"
        android:layout_centerInParent="true"

        />

    <TextView
        android:id="@+id/txt_abajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_5"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_below="@id/txt_center"
        android:layout_alignLeft="@id/txt_center"

        />
</RelativeLayout>
